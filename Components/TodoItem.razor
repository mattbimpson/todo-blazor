<div class="todo-container @cssClass" @onclick="@completedChanged">
  <div class='todo-item'>
        @todo.Description
    </div>
    @* <div class='todo-controls'>
        <input type="button" class="btn" value="X" />
    </div> *@
</div>

<style scoped>
  .todo-container.completed {
    text-decoration: line-through;
    color: darkgray;
    background-color: darkgreen;
  }

  .todo-item, .todo-controls {
      display: block;
  }

  .todo-controls {
      font-size: small;
      text-align: right;
  }

  .todo-container {
      border-radius: 5px;
      background: darkgray;
      padding: 5px;
      margin-top: 5px;
      width: 600px;
  }

  .btn {
      border-radius: 5px;
  }

</style>

@code {
  private string cssClass { get; set; }
  [Parameter] public todo_blazor.Models.Todo todo { get; set; }

  private void completedChanged() {
    todo.Completed = !todo.Completed;
    setCssClass();
  }

  private void setCssClass() {
    cssClass = todo.Completed ? "completed" : "";
  }
}